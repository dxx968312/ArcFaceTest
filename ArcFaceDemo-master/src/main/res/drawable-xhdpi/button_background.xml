<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--选中状态-->
    <item android:state_pressed="true">
        <shape>
            <!--背景颜色-->
            <solid android:color="@color/white"></solid>
            <!--修圆角-->
            <corners android:radius="10dp"></corners>
            <!--边框-->
            <stroke android:width="5dp" android:color="@color/green_three"></stroke>
            <!--渐变-->
            <gradient android:angle="0" android:startColor="@color/white" android:endColor="@color/green_one"></gradient>
        </shape>
    </item>

    <!--未选中状态-->
    <item android:state_pressed="false">
        <shape>
            <!--背景颜色-->
            <solid android:color="@color/white"></solid>
            <!--修圆角-->
            <corners android:radius="5dp"></corners>
            <!--边框-->
            <stroke android:width="1dp" android:color="@color/orange"></stroke>
            <!--渐变-->
            <gradient android:angle="90" android:startColor="@color/orange" android:endColor="@color/orang_one"></gradient>
        </shape>
    </item>
</selector>